<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".InfoFragment">

    <TextView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:text="입장권 구매"
        android:textStyle="bold"
        android:textSize="32sp"
        android:gravity="center" />

    <TextView
        android:id="@+id/sub_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:text="입장권 정보"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:gravity="center|left"
        android:paddingLeft="40dp"
        android:layout_below="@id/header_title" />

    <TextView
        android:id="@+id/name_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:text="시설명 : "
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:gravity="center|left"
        android:paddingLeft="40dp"
        android:layout_below="@+id/sub_title" />

    <TextView
        android:id="@+id/date_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:text="입장 날짜 : "
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:gravity="center|left"
        android:paddingLeft="40dp"
        android:layout_below="@+id/name_title" />

    <TextView
        android:id="@+id/ticket_quantity_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:text="입장권 수 : "
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:gravity="center|left"
        android:paddingLeft="40dp"
        android:layout_below="@id/date_title" />

    <!--
    <Spinner
        android:id="@+id/ticket_quantity_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ticket_quantity_title"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="@drawable/spinner_background" />


    <TextView
        android:id="@+id/price_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="가격 : 0 원"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:gravity="center|left"
        android:paddingLeft="40dp"
        android:layout_below="@id/ticket_quantity_spinner" />
    -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:padding="16dp">

        <android.widget.Button
            android:id="@+id/btn_payment_cancel"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/recyclerview_round"
            android:gravity="center"
            android:text="취소"
            android:textColor="#121212"
            android:backgroundTint="#FF3D00"
            android:textSize="24dp"
            android:textStyle="bold" />

        <android.widget.Button
            android:id="@+id/btn_payment_ok"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/recyclerview_round"
            android:gravity="center"
            android:text="결제"
            android:textColor="#121212"
            android:backgroundTint="#FFEB3B"
            android:textSize="24dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
