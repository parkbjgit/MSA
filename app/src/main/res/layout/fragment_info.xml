<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="8dp"
    android:orientation="vertical">

    <!-- 상단 랭킹 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/white_border"
        android:padding="16dp">

        <!-- 인기순 랭킹 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인기순"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:paddingBottom="8dp" />

            <!-- 랭킹 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="아틀란티스"
                    android:paddingStart="4dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/red_up" />
            </LinearLayout>

            <!-- 랭킹 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="자이로스윙"
                    android:paddingStart="4dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/red_up"/>
            </LinearLayout>

            <!-- 랭킹 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="후룸라이드"
                    android:paddingStart="4dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/blue_down" />
            </LinearLayout>

        </LinearLayout>

        <!-- 몰려있는 순 랭킹 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="검색순"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingBottom="8dp"
                android:textColor="@color/white" />

            <!-- 랭킹 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="자이로스윙"
                    android:paddingStart="8dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/red_up"/>
            </LinearLayout>

            <!-- 랭킹 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="바이킹"
                    android:paddingStart="8dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/blue_down" />
            </LinearLayout>

            <!-- 랭킹 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="후렌치레볼루션"
                    android:paddingStart="8dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/red_up"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- 현재 예약된 놀이기구 섹션 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 예약된 놀이기구"
        android:textSize="20sp"
        android:textColor="#f5f5f5"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"/>

    <!-- 예약된 놀이기구 목록 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#1f1f1f"
                app:cardCornerRadius="8dp"
                android:layout_margin="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/white_border"
                    android:padding="16dp">


                    <!-- 놀이기구 이름 및 상태 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/rideName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="아틀란티스"
                            android:textSize="18sp"
                            android:textColor="#f5f5f5"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/rideStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="예약 중"
                            android:textSize="14sp"
                            android:textColor="#FFEB3B"
                            android:paddingLeft="5dp"
                            android:textStyle="italic" />
                    </LinearLayout>

                    <!-- 탑승 시간 및 남은 시간 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/rideTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="탑승 시간: 14:30"
                            android:textColor="#f5f5f5"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/timeRemaining"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="남은 시간: 30분"
                            android:textColor="#f5f5f5"
                            android:paddingLeft="10dp"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- 예약 인원 -->
                    <TextView
                        android:id="@+id/ridePeople"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="예약 인원: 4명"
                        android:textColor="#f5f5f5"
                        android:textSize="14sp" />


                    <!--시설이미지-->
                    <ImageView
                        android:id="@+id/atlantis"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/atlantis"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                    <!-- 예약 취소 버튼 -->
                    <Button
                        android:id="@+id/reservation_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="예약 취소"
                        android:textSize="15sp"
                        android:textColor="#f5f5f5"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="#F44336"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>


    <!-- 하단 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_go_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="예약하러 가기"
            android:textSize="14sp"
            android:textColor="#f5f5f5"
            android:backgroundTint="#4CAF50" />
    </LinearLayout>

</LinearLayout>
