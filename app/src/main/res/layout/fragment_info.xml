<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:padding="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- 인기순 랭킹 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인기순"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:paddingBottom="8dp" />

            <!-- 랭킹 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="아틀란티스"
                    android:paddingStart="4dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/red_up" />
            </LinearLayout>

            <!-- 랭킹 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="자이로스윙"
                    android:paddingStart="4dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/red_up"/>
            </LinearLayout>

            <!-- 랭킹 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="후룸라이드"
                    android:paddingStart="4dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/blue_down" />
            </LinearLayout>

        </LinearLayout>

        <!-- 몰려있는 순 랭킹 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="복잡도순"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingBottom="8dp"
                android:textColor="@color/white" />

            <!-- 랭킹 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="자이로스윙"
                    android:paddingStart="8dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/red_up"/>
            </LinearLayout>

            <!-- 랭킹 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="바이킹"
                    android:paddingStart="8dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/blue_down" />
            </LinearLayout>

            <!-- 랭킹 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="후렌치레볼루션"
                    android:paddingStart="8dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/red_up"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- 현재 예약된 놀이기구 섹션 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 예약된 놀이기구"
        android:textSize="20sp"
        android:textColor="#f5f5f5"
        android:layout_marginBottom="16dp" />

    <!-- 예약된 놀이기구 목록 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 첫 번째 예약된 놀이기구 카드 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#1f1f1f"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- 놀이기구 이름 및 상태 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/rideName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="놀이기구 이름"
                            android:textSize="18sp"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/rideStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="예약 중"
                            android:textSize="14sp"
                            android:textColor="#FFEB3B"
                            android:paddingLeft="5dp"
                            android:textStyle="italic" />
                    </LinearLayout>

<!--                    &lt;!&ndash; 놀이기구 이미지 &ndash;&gt;-->
<!--                    <ImageView-->
<!--                        android:id="@+id/rideImage"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="150dp"-->
<!--                        android:scaleType="centerCrop"-->
<!--                        android:layout_marginTop="8dp"-->
<!--                        android:layout_marginBottom="8dp"-->
<!--                        android:contentDescription="놀이기구 이미지" />-->

                    <!-- 탑승 시간 및 남은 시간 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/rideTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="탑승 시간: 14:30"
                            android:textColor="#f5f5f5"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/timeRemaining"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="남은 시간: 30분"
                            android:textColor="#ffffff"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- 예약 인원 -->
                    <TextView
                        android:id="@+id/ridePeople"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="예약 인원: 4명"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <!-- 예약 취소 버튼 -->
                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="예약 취소"
                        android:textColor="#000000"
                        android:backgroundTint="#FF3D00"
                        android:layout_marginTop="16dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 추가적인 예약된 놀이기구 카드를 여기에 반복적으로 추가 -->
        </LinearLayout>
    </ScrollView>

    <!-- 과거 예약된 놀이기구 섹션 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="과거 예약된 놀이기구"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- 과거 예약된 놀이기구 목록 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 첫 번째 과거 놀이기구 카드 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#1f1f1f"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- 놀이기구 이름 및 상태 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/pastRideName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="놀이기구 이름"
                            android:textSize="18sp"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/pastRideStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="탑승 완료"
                            android:textSize="14sp"
                            android:textColor="#4CAF50"
                            android:paddingLeft="5dp"
                            android:textStyle="italic" />
                    </LinearLayout>

<!--                    &lt;!&ndash; 놀이기구 이미지 &ndash;&gt;-->
<!--                    <ImageView-->
<!--                        android:id="@+id/pastRideImage"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="150dp"-->
<!--                        android:scaleType="centerCrop"-->
<!--                        android:layout_marginTop="8dp"-->
<!--                        android:layout_marginBottom="8dp"-->
<!--                        android:contentDescription="놀이기구 이미지" />-->

                    <!-- 탑승 날짜 -->
                    <TextView
                        android:id="@+id/pastRideDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="탑승 날짜: 2024-09-30"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <!-- 리뷰 작성 버튼 -->
                    <Button
                        android:id="@+id/btnReview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="리뷰 작성"
                        android:textColor="#ffffff"
                        android:backgroundTint="#FF9800"
                        android:layout_marginTop="16dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 추가적인 과거 예약된 놀이기구 카드를 여기에 반복적으로 추가 -->
        </LinearLayout>
    </ScrollView>

    <!-- 하단 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_cancel_reservation"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginEnd="16dp"
            android:text="현재 예약 취소"
            android:textSize="15dp"
            android:textColor="#000000"
            android:backgroundTint="#FF3D00" />

        <Button
            android:id="@+id/btn_go_reservation"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="시설 예약하기"
            android:textSize="15dp"
            android:textColor="#000000"
            android:backgroundTint="#FFEB3B" />
    </LinearLayout>
</LinearLayout>
