<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoFragment">

    <TextView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/black"
        android:text="기구 이용 시간"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/facility_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/btn_purple"
        android:textColor="@color/black"
        android:text="기구 이름"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_below="@id/header_title" />

    <android.widget.Button
        android:id="@+id/btn_select_time1"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_selector"
        android:text="09:00"
        android:textColor="@color/text_selector"
        android:textSize="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/facility_name" />

    <android.widget.Button
        android:id="@+id/btn_select_time2"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_selector"
        android:text="09:30"
        android:textColor="@color/text_selector"
        android:textSize="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="150dp"
        android:layout_below="@+id/facility_name" />

    <android.widget.Button
        android:id="@+id/btn_select_time3"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_selector"
        android:text="10:00"
        android:textColor="@color/text_selector"
        android:textSize="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="280dp"
        android:layout_below="@+id/facility_name" />

    <android.widget.Button
        android:id="@+id/btn_select_time4"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_selector"
        android:text="10:30"
        android:textColor="@color/text_selector"
        android:textSize="15dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/facility_name" />

    <android.widget.Button
        android:id="@+id/btn_select_time5"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_selector"
        android:text="11:00"
        android:textColor="@color/text_selector"
        android:textSize="15dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="150dp"
        android:layout_below="@+id/facility_name" />

    <android.widget.Button
        android:id="@+id/btn_select_time6"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_selector"
        android:text="11:30"
        android:textColor="@color/text_selector"
        android:textSize="15dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="280dp"
        android:layout_below="@+id/facility_name" />


</RelativeLayout>