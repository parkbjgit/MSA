<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:gravity="center"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/logoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="MSA"
        android:textColor="@color/blue"
        android:textSize="80sp" />

    <TextView
        android:id="@+id/logoText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoText"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="통합 예약 앱"
        android:textColor="@color/blue"
        android:textSize="24sp" />

    <!-- KakaoTalk Login Button -->
    <Button
        android:id="@+id/btn_kakao_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoText2"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#FFEB00"
        android:text="카카오로 빠른 로그인"
        android:textSize="16sp"
        android:textColor="#000000"
        android:drawableLeft="@drawable/kakao"
        android:gravity="center_vertical" />

    <Button
        android:id="@+id/btn_google_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_kakao_login"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#FFFFFF"
        android:text="구글로 로그인"
        android:textSize="16sp"
        android:textColor="#000000"
        android:drawableLeft="@drawable/google"
        android:gravity="center_vertical" />

</RelativeLayout>
