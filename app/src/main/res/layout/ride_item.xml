<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/white_border"
    android:padding="8dp"
    android:layout_marginBottom="32dp">

    <!-- Ride Image -->
    <ImageView
        android:id="@+id/ride_image"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp" />

    <!-- Container for ride name, distance, and congestion level -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Ride Name -->
        <TextView
            android:id="@+id/ride_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <!-- Horizontal layout for distance and congestion level -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <!-- Ride Distance -->
            <TextView
                android:id="@+id/ride_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:layout_marginEnd="16dp" />

            <!-- Congestion Level -->
            <TextView
                android:id="@+id/congestion_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="혼잡도"
                android:textColor="#ffffff"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
