<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MSA" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>

        <!--custom font-family 적용-->
        <item name="android:fontFamily">@font/cookierun_regular</item>
        <item name="android:textViewStyle">@font/cookierun_regular</item>
        <item name="android:buttonStyle">@font/cookierun_regular</item>
        <item name="android:editTextStyle">@font/cookierun_regular</item>
        <item name="android:radioButtonStyle">@font/cookierun_regular</item>
        <item name="android:checkboxStyle">@font/cookierun_regular</item>
    </style>


    <!-- CalendarView의 커스텀 스타일 -->
    <style name="CalendarCustomStyle" parent="Theme.AppCompat">
        <item name="android:dateTextAppearance">@style/CalendarDateTextAppearance</item>
        <item name="android:weekDayTextAppearance">@style/CalendarWeekDayTextAppearance</item>
        <item name="android:headerDayOfMonthTextAppearance">@style/CalendarHeaderTextAppearance</item>

    </style>

    <style name="CalendarDateTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="CalendarWeekDayTextAppearance" parent="TextAppearance.MaterialCalendarWidget.WeekDay">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalendarHeaderTextAppearance" parent="TextAppearance.MaterialCalendarWidget.WeekDay">
        <item name="android:textColor">@android:color/white</item>
    </style>



    <!-- BottomNavigationView 스타일 정의 -->
    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <!-- 아이콘 크기 설정 -->
        <item name="itemIconSize">20dp</item> <!-- 원하는 아이콘 크기로 변경 -->

        <!-- 텍스트 크기 설정 -->
        <item name="itemTextAppearanceActive">@style/BottomNavigationViewActiveText</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationViewInactiveText</item>
    </style>

    <!-- 활성 상태일 때 텍스트 스타일 -->
    <style name="BottomNavigationViewActiveText" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item> <!-- 활성 상태일 때 텍스트 크기 -->
    </style>

    <!-- 비활성 상태일 때 텍스트 스타일 -->
    <style name="BottomNavigationViewInactiveText" parent="@android:style/TextAppearance">
        <item name="android:textSize">10sp</item> <!-- 비활성 상태일 때 텍스트 크기 -->
    </style>

    <style name="Theme.MSA" parent="Base.Theme.MSA" />
</resources>