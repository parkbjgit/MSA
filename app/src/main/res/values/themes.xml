<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MSA" parent="Theme.Material3.DayNight.NoActionBar">

    <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!--custom font-family 적용-->
        <item name="android:fontFamily">@font/cookierun_regular</item>
        <item name="android:textViewStyle">@font/cookierun_regular</item>
        <item name="android:buttonStyle">@font/cookierun_regular</item>
        <item name="android:editTextStyle">@font/cookierun_regular</item>
        <item name="android:radioButtonStyle">@font/cookierun_regular</item>
        <item name="android:checkboxStyle">@font/cookierun_regular</item>

    </style>


    <!-- CalendarView의 커스텀 스타일 -->
    <style name="CalendarCustomStyle">
        <item name="android:dateTextAppearance">@style/CalendarDateTextAppearance</item>
        <item name="android:weekDayTextAppearance">@style/CalendarWeekDayTextAppearance</item>
        <item name="android:headerDayOfMonthTextAppearance">@style/CalendarHeaderTextAppearance</item>
    </style>

    <style name="CalendarDateTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CalendarWeekDayTextAppearance" parent="TextAppearance.MaterialCalendarWidget.WeekDay">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CalendarHeaderTextAppearance" parent="TextAppearance.MaterialCalendarWidget.WeekDay">
        <item name="android:textColor">@android:color/white</item>
    </style>



    <style name="Theme.MSA" parent="Base.Theme.MSA" />
</resources>